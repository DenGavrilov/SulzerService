<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckInstallActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCondition">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_button_selector"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="#002F6C"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/gray_button_selector"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="#002F6C"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/reportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/userText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/checkInstallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/checking_installation"
        android:textAlignment="center"
        android:textColor="#002F6C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/logoSulzerBlue"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/sulzer_logo_blue"
        android:src="@drawable/sulzer_logo_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:background="#003DA5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoSulzerBlue" />

    <ImageView
        android:id="@+id/imageTools"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/tools"
        android:src="@drawable/tools_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDocumentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/documentation"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkInstallText" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/docSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnDocumentation"
        app:layout_constraintStart_toStartOf="@+id/btnDocumentation"
        app:layout_constraintTop_toTopOf="@+id/btnDocumentation" />

    <Button
        android:id="@+id/btnPipelines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/pipelines"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDocumentation" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/pipeSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPipelines"
        app:layout_constraintStart_toStartOf="@+id/btnPipelines"
        app:layout_constraintTop_toTopOf="@+id/btnPipelines" />

    <Button
        android:id="@+id/btnFundation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/foundation"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPipelines" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/fundSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnFundation"
        app:layout_constraintStart_toStartOf="@+id/btnFundation"
        app:layout_constraintTop_toTopOf="@+id/btnFundation" />

    <Button
        android:id="@+id/btnFlanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/flanges"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFundation" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/flangeSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnFlanges"
        app:layout_constraintStart_toStartOf="@+id/btnFlanges"
        app:layout_constraintTop_toTopOf="@+id/btnFlanges" />

    <Button
        android:id="@+id/btnShaftSeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/shaft_seal"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFlanges" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/sealSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnShaftSeal"
        app:layout_constraintStart_toStartOf="@+id/btnShaftSeal"
        app:layout_constraintTop_toTopOf="@+id/btnShaftSeal" />

    <Button
        android:id="@+id/btnLubrication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/lubrication"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShaftSeal" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/lubSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnLubrication"
        app:layout_constraintStart_toStartOf="@+id/btnLubrication"
        app:layout_constraintTop_toTopOf="@+id/btnLubrication" />

    <Button
        android:id="@+id/btnCoupling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/coupling"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLubrication" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/coupSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCoupling"
        app:layout_constraintStart_toStartOf="@+id/btnCoupling"
        app:layout_constraintTop_toTopOf="@+id/btnCoupling" />

    <Button
        android:id="@+id/btnMotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/motor"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCoupling" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/motorSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnMotor"
        app:layout_constraintStart_toStartOf="@+id/btnMotor"
        app:layout_constraintTop_toTopOf="@+id/btnMotor" />

    <Button
        android:id="@+id/btnCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="8dp"
        android:background="@drawable/blue_land_button_selector"
        android:clickable="true"
        android:duplicateParentState="false"
        android:enabled="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/general_conditions"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMotor" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/conditionSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCondition"
        app:layout_constraintStart_toStartOf="@+id/btnCondition"
        app:layout_constraintTop_toTopOf="@+id/btnCondition" />

    <TextView
        android:id="@+id/textBuferUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="698dp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textBuferPump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>